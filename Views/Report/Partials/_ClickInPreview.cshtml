@using Kooboo.EmailMarketing
@model Campaign
@{
    int i = 0;
}
<h5>@("View click report in email preview".Localize())</h5>
<div id="template-select" class="block clearfix">
	<div id="templates">
        @foreach (var each in Model.Messages)
        {
        	<div class="template">
		        <a class="template-image" href="@Url.Action("clickinpreview", "report", new { id = Model.Messages[i].Id, type = (int)EmailMessageType.Campaign })" target="_blank">
			        <span>@("Preview".Localize())</span>
                    @Html.Thumb(Url.Action("thumb", "message", new { id = each.Id }))
		        </a>
                @if (Model.Messages.Count > 1)
                {
		            <div class="template-info">
                        <label>@Html.MailName(i++)</label>
                    </div>
                }
		    </div>
        }
    </div>
</div>